<% provide(:title, 'Show event') %>
<section class="hero1">
	<div class="hero-inner">
		<h2><%= @event.title %></h2>
	</div>
</section>

<div class="container text-center">
	<div class="col-sm-12">
		<!-- -------------------------FIN PROFILE ------------------------------- -->
		<div class="row">
			<div class="col-sm-12">
				<div class="panel panel-default">
					<div class="panel-body">

						<p>
							<%= @event.location %>, Lyon, France</p>
					</div>
				</div>
			</div>
		</div>
		<!-- ---------------------------------------- FIN STATUS ----------------------- -->
		<div class="row mr-auto text-center">
			<div class="well">

				<div class="col-sm-4">
					<h2 class="h4 mb-3 font-weight-normal text-center">
						<%= @event.description %>
					</h2><br>
					<hr class="my-0">
					<hr class="my-0"><br>
					<p>Le
						<%= @event.start_date.to_s[0..-13] %>, duree :
						<%= @event.duration %> minutes</p>
					<hr class="my-0">
					<hr class="my-0"><br>
					<p>Tarif :
						<%= @event.price %>€</p>
					<hr class="my-0">
					<hr class="my-0"><br>
					<p>Organise par :
						<%= @event.admin.first_name %><br>
						<%= @event.admin.email %>
					</p>
				</div>
				<div class="col-sm-12">
					<hr class="my-0">
					<hr class="my-0"><br>
					<div class="row-mr-auto d-flex justify-content-between align-items-center">
						<div>
							<h2 class="h4 mb-3 font-weight-normal text-center">
								<%= @event.attendances.size %> INSCRITS !</h2>
						</div>
						<ul>
							<% if user_signed_in? %>
							<div>
								<%= link_to "Reserver", new_event_attendance_path(@event.id), class:"btn btn-primary btn-lg" %>
								</p>
							</div>
					</div>
					<% else %>
					<div>
						<%= link_to "Vous devez être inscrits pour réserver", home_index_path, class:"btn btn-primary btn-lg" %>
						</p>
						<%end%>
						</ul>
					</div>

					<div class="card" style="width: 18rem;">
						<div class="card-header">
							<h3>Participants</h3>
						</div>
						<ul class="list-group list-group-flush">
							<% @event.attendances.each do |resa|%>
							<p>
								<li class="list-group-item"><%=resa.user.first_name%> <%=resa.user.last_name%></li>
							</p>
							<%end%>
						</ul>
					</div>
					<div>

					</div>

					<hr class="my-0">
					<hr class="my-0"><br>
				</div>
			</div>
		</div>
	</div>
	<div class="container">

		<h1>COMMENT BOX</h1>
		<!-------Wrap------------>
		<div id="wrap">
			<div id="main">
				<div class="row">
					<div class="col-md-5">
						<h3 class="heading">Comments and Responses</h3>
					</div>
					<div class="col-md-7">
						<div id="upper_blank"></div>
					</div>
				</div>
			</div>

			<p>Your email address will not be published. Required fields are marked *</p>

			<!------------Form Start---------->

			<div id='form'>
				<div class="row">
					<div class="col-md-12">

						<form action="" method="POST" id="commentform">

							<div id="comment-name" class="form-row">
								<input type="text" placeholder="Name (required)" name="dname" id="name">
							</div>
							<div id="comment-email" class="form-row">
								<input type="text" placeholder="Mail (will not be published) (required)" name="demail"
									id="email">
							</div>
							<div id="comment-url" class="form-row">
								<input type="text" placeholder="Website" name="url" id="url">
							</div>
							<div id="comment-message" class="form-row">
								<textarea name="comment" placeholder="Message" id="comment"></textarea>
							</div>
							<a href="#"><input type="submit" name="dsubmit" id="commentSubmit"
									value="Submit Comment"></a>
							<input style="width: 30px" type="checkbox" value="1" name="subscribe" id="subscribe"
								checked="checked">
							<p1><b>Notify me when new comments are added.</b></p1>
						</form>

					</div>
				</div>
			</div>
		</div>

		<!-------------------Reply Section------->
		<div id="second">
			<div class="row">
				<div class="col-md-2">
					<h3 class="second_heading"><b>Leave a Reply</b></h3>
				</div>
				<div class="col-md-10">
					<div class="blank"></div>
				</div>
			</div>
		</div>
		<div id="middle">
			<form>
				<a href="#"><input type="text" value="reply" name="dreply" id="inner_reply"></a>
			</form>
		</div>

	</div>
</div>
</body>

</html>